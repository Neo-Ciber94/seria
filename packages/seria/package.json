{
  "name": "seria",
  "version": "0.1.4",
  "description": "A library for serialize/deserialize beyond JSON",
  "author": {
    "name": "Freddy L."
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsup",
    "test": "vitest --run",
    "lint": "eslint ./src/**/*.{js,jsx,ts,tsx}",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neo-Ciber94/seria"
  },
  "keywords": [
    "react",
    "json",
    "form-data",
    "server",
    "client"
  ],
  "devDependencies": {
    "@hono/node-server": "^1.8.2",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "blob-polyfill": "^7.0.20220408",
    "eslint": "^8.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eventsource-parser": "^1.1.2",
    "hono": "^4.1.3",
    "jsdom": "^24.0.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vitest": "^1.2.2"
  },
  "sideEffects": false,
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./form-data": {
      "import": {
        "types": "./dist/form-data/index.d.ts",
        "default": "./dist/form-data/index.js"
      },
      "require": {
        "types": "./dist/form-data/index.d.cts",
        "default": "./dist/form-data/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "./package.json"
  ]
}