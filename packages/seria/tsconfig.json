{
  "compilerOptions": {
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "outDir": "dist",
    "stripInternal": true
  },
  "include": [
    "src",
    "scripts",
    "tests",
    "benchmark",
    "tsup.config.ts",
    "setupTests.ts",
    "vitest.config.mts",
    "copyPublishFiles.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}